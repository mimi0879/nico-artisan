<h1>Editing video</h1>

<%= @video.iframe %>

<% form_for(@video) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :vid %><br />
    <%= f.text_field :vid %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :published_at %><br />
    <%= f.datetime_select :published_at %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @video %> |
<%= link_to 'Back', videos_path %>
